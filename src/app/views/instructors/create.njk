{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="POST" action="/instructors">
        
        <section class="avatar">
        </section>

        <section class="details">
            
            <h3>Cadastrar Novo Instrutor</h3>
            
            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input placeholder="http:// ..." type="url" name="avatar_url" />
                </div>
            </div>

            <div class="item">
                <div>Nome do Instrutor</div>
                <div>
                    <input placeholder="Seu nome ..." type="text" name="name" />
                </div>
            </div>


            <div class="item">
                <div>Data de Nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>
                    <span><input type="radio" name="gender" value="M" checked> Masculino</span>
                    <span><input type="radio" name="gender" value="F"> Feminino</span>
                </div>
            </div>

            <div class="item">
                <div>Área de Atuação</div>
                <div>
                    <input placeholder="Separe os Serviços prestados por VÍRGULA ," type="text" name="services">
                </div>
            </div>

            <button type="submit">Salvar</button>

        </section>
    </form>

{% endblock content %}